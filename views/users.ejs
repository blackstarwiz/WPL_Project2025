<%- include('partials/header') %>

<main>
  <section class="users-page">
    <h1>Gebruikers</h1>

    <% if (users && users.length > 0) { %>
      <table class="users-table">
        <thead>
          <tr>
            <th>Naam</th>
            <th>Email</th>
            <th>Telefoon</th>
            <th>Rol</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(user => { %>
            <tr>
              <td><%= user.name || '-' %></td>
              <td><%= user.email %></td>
              <td><%= user.phone || '-' %></td>
              <td><%= user.role %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <p>Geen gebruikers gevonden.</p>
    <% } %>
  </section>
</main>

<%- include('partials/footer') %>
