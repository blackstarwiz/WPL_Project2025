<section class="menulist">
  <h1>Pizza</h1>

  <% if (Array.isArray(pizzas) && pizzas.length) { %>
    <ul>
      <% pizzas.forEach(p => { %>
        <li>
          <div class="pizzalist">
            <h2><%= p.Naam %></h2>
            <p>
              <span>€ <%= Number(p.Prijs).toFixed(2) %></span>
            </p>
          </div>

          <p><%= p.Beschrijving || "Heerlijke, versbereide pizza." %></p>

          <% if (p.AfbeeldingURL) { %>
            <img src="<%= p.AfbeeldingURL %>" alt="<%= p.Naam %>" />
          <% } %>
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <p>Geen pizza’s beschikbaar.</p>
  <% } %>

  <a class="orderbuttonpizzalist" href="/bestel">Menu</a>
</section>
