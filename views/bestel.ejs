<%- include('partials/header') %>

<main>
  <h1>Ons Menu</h1>
  <section class="menu">
    <% menu.forEach(function(item) { %>
    <article class="card">
      <img src="<%= item.foto %>" alt="<%= item.naam %>" />
      <h2><%= item.naam %></h2>
      <p>Heerlijke <%= item.naam %> pizza.</p>

      <form action="/bestel" method="POST">
        <input type="hidden" name="pizza" value="<%= item.naam %>" />
        <button type="submit" class="orderbutton">Bestel nu</button>
      </form>
    </article>
    <% }); %>
  </section>
</main>

<aside>
  <h1>Uw Bestelling</h1>
  <ul class="order-list">
    <% bestellingen.forEach(function(itemNaam, i) { %>
    <li>
      <div class="pizzalist">
        <h2><%= itemNaam %></h2>
        <p>€XX.XX</p>
      </div>

      <form action="/bestel/verwijder" method="POST" style="display: inline">
        <input type="hidden" name="index" value="<%= i %>" />
        <button
          type="submit"
          class="remove-button"
          aria-label="Verwijder bestelling"
        >
          Verwijder
        </button>
      </form>
    </li>
    <% }); %>
  </ul>

  <div class="total">
    <h2>Totaal: <% // prijs logica komt hier %></h2>
    <p>€0.00</p>
  </div>

  <button type="button" class="orderbuttongreen">Bestellen</button>
</aside>

<%- include('partials/footer') %>
