<%- include('partials/header') %>

<main>
  <h1>Ons Menu</h1>
  <section class="menu">
    <% (pizzas || []).forEach(pizza => { %>
      <article class="card">
        <img src="<%= pizza.AfbeeldingURL || '/assets/images/pizza_placeholder.png' %>" alt="<%= pizza.Naam %>">
        <h2><%= pizza.Naam %></h2>
        <p><%= pizza.Beschrijving || 'Geen beschrijving beschikbaar.' %></p>
        <p><strong>€ <%= Number(pizza.Prijs || 0).toFixed(2) %></strong></p>
        <form action="/bestel" method="POST">
          <input type="hidden" name="pizza" value="<%= pizza.Naam %>">
          <button type="submit" class="orderbutton">Bestel nu</button>
        </form>
      </article>
    <% }) %>
  </section>
</main>

<aside>
  <h1>Uw Bestelling</h1>
  <ul class="order-list">
    <!-- tijdelijk statisch voorbeeld, mag weg -->
    <li>
      <div class="pizzalist">
        <h2>pizzanaam</h2>
        <p>prijs</p>
      </div>
      <form action="/bestel/verwijder" method="POST" style="display:inline;">
        <input type="hidden" name="index" value="">
        <button type="submit" class="remove-button" aria-label="Verwijder bestelling">Verwijder</button>
      </form>
    </li>
  </ul>
  <div class="total">
    <h2>Totaal:</h2>
    <p>€ 0.00</p>
  </div>
  <form action="/bestel/afrekenen" method="POST">
    <button type="submit" class="orderbuttongreen">Bestellen</button>
  </form>
</aside>

<%- include('partials/footer') %>
